generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id        Int @id @default(autoincrement())
  email     String
  password  String
  username  String
  posts     Posts[]
}

model Posts {
  id      Int @id @default(autoincrement())
  title   String
  body    String?
  tags    Tags[]
  User    Users @relation(fields: [userId] , references: [id])
  userId  Int
  createdAr DateTime @default(now())
}


model Tags{
  id    Int @id @default(autoincrement())
  tag   String @unique
  post  Posts[]

}
